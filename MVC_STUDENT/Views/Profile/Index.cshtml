@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewBag.Title = "Thông tin cá nhân";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card card-modern">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i>Thông tin cá nhân</h5>
                <a href="/Profile/Edit" class="btn btn-gradient btn-sm">
                    <i class="fas fa-edit me-1"></i>Chỉnh sửa
                </a>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="row mb-4">
                    <div class="col-md-4 text-center">
                        <div class="user-avatar-large mx-auto mb-3" style="width: 120px; height: 120px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 48px; font-weight: 600;">
                            @{
                                var fullName = Session["FullName"]?.ToString() ?? "Student";
                                var firstChar = fullName.Length > 0 ? fullName[0].ToString().ToUpper() : "S";
                            }
                            @firstChar
                        </div>
                        <h4>@(Session["FullName"]?.ToString() ?? "Sinh viên")</h4>
                        <span class="badge bg-success">Sinh viên</span>
                    </div>
                    <div class="col-md-8">
                        <table class="table table-borderless">
                            <tr>
                                <th width="35%">Email:</th>
                                <td>@(Session["Email"]?.ToString() ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Số điện thoại:</th>
                                <td>Chưa cập nhật</td>
                            </tr>
                            <tr>
                                <th>Địa chỉ:</th>
                                <td>Chưa cập nhật</td>
                            </tr>
                            <tr>
                                <th>Ngày tham gia:</th>
                                <td>N/A</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="mt-4">
                    <h6 class="mb-3"><i class="fas fa-chart-line me-2"></i>Thống kê học tập</h6>
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <div class="card card-modern">
                                <div class="card-body">
                                    <i class="fas fa-book fa-2x text-primary mb-2"></i>
                                    <h4>0</h4>
                                    <p class="text-muted mb-0">Học liệu đã xem</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card card-modern">
                                <div class="card-body">
                                    <i class="fas fa-heart fa-2x text-danger mb-2"></i>
                                    <h4>0</h4>
                                    <p class="text-muted mb-0">Yêu thích</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card card-modern">
                                <div class="card-body">
                                    <i class="fas fa-comment fa-2x text-success mb-2"></i>
                                    <h4>0</h4>
                                    <p class="text-muted mb-0">Bình luận</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

