@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewBag.Title = "Tìm kiếm";
    var keyword = ViewBag.Keyword as string ?? "";
}

<div class="mb-4">
    <h2>
        <i class="fas fa-search text-primary me-2"></i>Kết quả tìm kiếm
    </h2>
    <p class="text-muted">Từ khóa: <strong>"@keyword"</strong></p>
</div>

@if (!string.IsNullOrEmpty(keyword))
{
    <div class="row">
        @for (int i = 1; i <= 6; i++)
        {
            <div class="col-md-4 mb-4">
                <div class="card material-card">
                    <div class="material-thumbnail">
                        <i class="fas fa-file-pdf"></i>
                    </div>
                    <div class="card-body">
                        <span class="badge bg-primary mb-2">PDF</span>
                        <h5 class="card-title">Kết quả tìm kiếm @i</h5>
                        <p class="text-muted small mb-2">
                            <i class="fas fa-user me-1"></i>Giảng viên
                            <span class="ms-3"><i class="fas fa-eye me-1"></i>@(i * 50) lượt xem</span>
                        </p>
                        <div class="mb-2">
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="far fa-star"></i>
                            <span class="ms-1">4.0</span>
                        </div>
                        <a href="/LearningMaterial/Details/@i" class="btn btn-gradient btn-sm w-100">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card card-modern">
        <div class="card-body text-center p-5">
            <i class="fas fa-search fa-4x text-muted mb-3"></i>
            <h4>Nhập từ khóa để tìm kiếm</h4>
            <p class="text-muted">Tìm kiếm học liệu, bài giảng, tài liệu...</p>
        </div>
    </div>
}



