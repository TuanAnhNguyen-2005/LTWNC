@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewBag.Title = "Yêu thích";
}

<h2 class="mb-4">
    <i class="fas fa-heart text-danger me-2"></i>Học liệu yêu thích
</h2>

<div class="row">
    @for (int i = 1; i <= 6; i++)
    {
        <div class="col-md-4 mb-4">
            <div class="card material-card">
                <div class="material-thumbnail">
                    <i class="fas fa-file-pdf"></i>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <span class="badge bg-primary">PDF</span>
                        <button class="btn btn-sm btn-danger">
                            <i class="fas fa-heart"></i>
                        </button>
                    </div>
                    <h5 class="card-title">Học liệu yêu thích @i</h5>
                    <p class="text-muted small mb-2">
                        <i class="fas fa-user me-1"></i>Giảng viên
                        <span class="ms-3"><i class="fas fa-eye me-1"></i>@(i * 100) lượt xem</span>
                    </p>
                    <div class="mb-2">
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="far fa-star"></i>
                        <span class="ms-1">4.0</span>
                    </div>
                    <a href="/LearningMaterial/Details/@i" class="btn btn-gradient btn-sm w-100">Xem chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>

@if (false) // Nếu không có yêu thích
{
    <div class="card card-modern">
        <div class="card-body text-center p-5">
            <i class="fas fa-heart fa-4x text-muted mb-3"></i>
            <h4>Chưa có học liệu yêu thích</h4>
            <p class="text-muted">Hãy khám phá và thêm học liệu vào danh sách yêu thích của bạn!</p>
            <a href="/LearningMaterial" class="btn btn-gradient">
                <i class="fas fa-book me-1"></i>Khám phá học liệu
            </a>
        </div>
    </div>
}



