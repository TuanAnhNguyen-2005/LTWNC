@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewBag.Title = "Kết quả Quiz";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card card-modern">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="fas fa-trophy fa-5x text-warning mb-3"></i>
                    <h2 class="fw-bold">Kết quả Quiz</h2>
                </div>

                <div class="row mb-4">
                    <div class="col-md-4 mb-3">
                        <div class="card card-modern">
                            <div class="card-body">
                                <h3 class="text-primary fw-bold">8/10</h3>
                                <p class="text-muted mb-0">Điểm số</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card card-modern">
                            <div class="card-body">
                                <h3 class="text-success fw-bold">80%</h3>
                                <p class="text-muted mb-0">Tỷ lệ đúng</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card card-modern">
                            <div class="card-body">
                                <h3 class="text-info fw-bold">25:30</h3>
                                <p class="text-muted mb-0">Thời gian</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>Chúc mừng!</strong> Bạn đã hoàn thành quiz với kết quả tốt.
                </div>

                <div class="mt-4">
                    <a href="/Quiz" class="btn btn-gradient me-2">
                        <i class="fas fa-list me-1"></i>Xem danh sách Quiz
                    </a>
                    <a href="/Quiz/Details/1" class="btn btn-outline-primary">
                        <i class="fas fa-redo me-1"></i>Làm lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

