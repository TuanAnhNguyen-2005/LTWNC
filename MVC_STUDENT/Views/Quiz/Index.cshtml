@model List<MVC_STUDENT.Models.QuizDto>

@{
    ViewBag.Title = "Quiz & Kiểm tra";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-question-circle text-primary me-2"></i>Quiz & Kiểm tra
    </h2>
</div>

@if (ViewBag.DebugInfo != null)
{
    <div class="alert alert-warning">
        <strong>DEBUG INFO (xóa sau khi fix xong):</strong><br />
        @Html.Raw(ViewBag.DebugInfo)
    </div>
}
@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
        <p class="text-muted">Hiện chưa có quiz nào được mở.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var quiz in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card card-modern h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@quiz.TenQuiz</h5>
                        <p class="text-muted flex-grow-1">@(quiz.MoTa ?? "Không có mô tả")</p>
                        <div class="mt-auto">
                            <small class="text-muted">
                                <i class="fas fa-clock"></i> @quiz.ThoiGianLamBai phút |
                                <i class="fas fa-list"></i> @quiz.SoCauHoi câu hỏi
                            </small>
                            <div class="mt-3">
                                <a href="@Url.Action("Take", "Quiz", new { id = quiz.MaQuiz })"
                                   class="btn btn-gradient w-100">
                                    <i class="fas fa-play me-1"></i> Bắt đầu làm bài
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}