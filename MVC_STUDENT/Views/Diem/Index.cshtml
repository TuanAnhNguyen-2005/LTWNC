@model List<MVC_STUDENT.Models.QuizDiemDto>

@{
    ViewData["Title"] = "Điểm thi của tôi";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="text-dark mb-4"><i class="fas fa-trophy text-warning me-2"></i>Điểm thi của tôi</h2>

            @if (ViewBag.DebugInfo != null)
            {
                <div class="alert alert-warning mb-4">
                    <strong>Debug (xóa sau):</strong>
                    @Html.Raw(ViewBag.DebugInfo)
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            @if (Model != null && Model.Any())
            {
                <div class="card shadow-sm border-0">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th class="py-3">Bài quiz</th>
                                        <th class="py-3 text-center">Điểm</th>
                                        <th class="py-3 text-center">Thời gian làm</th>
                                        <th class="py-3 text-center">Ngày nộp</th>
                                        <th class="py-3 text-center">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var phanTram = item.TongDiem > 0 ? (item.Diem / item.TongDiem * 100) : 0;
                                        <tr class="text-dark">
                                            <td class="py-3">
                                                <strong>@item.TenQuiz</strong>
                                            </td>
                                            <td class="text-center py-3">
                                                <span class="badge badge-lg fs-6 px-3 py-2 @(item.Diem >= 8 ? "bg-success" : item.Diem >= 5 ? "bg-warning" : "bg-danger") text-white">
                                                    @item.Diem / @item.TongDiem
                                                </span>
                                                <br /><small class="text-muted">(@phanTram.ToString("F0")%)</small>
                                            </td>
                                            <td class="text-center py-3">
                                                <i class="fas fa-clock text-info me-1"></i>
                                                @string.Format("{0:mm\\:ss}", item.ThoiGianLam)
                                            </td>
                                            <td class="text-center py-3">
                                                @item.NgayNop.ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td class="text-center py-3">
                                                <a href="@Url.Action("ChiTiet", "Diem", new { id = item.MaQuiz })"
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye me-1"></i>Xem chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-light rounded-3">
                    <i class="fas fa-chart-bar fa-5x text-muted mb-4"></i>
                    <h4 class="text-dark">Chưa có kết quả thi nào</h4>
                    <p class="text-muted mb-4">Hãy tham gia các bài quiz trong khóa học để xem điểm của bạn!</p>
                    <a href="/KhoaHoc" class="btn btn-primary btn-lg">Xem khóa học</a>
                </div>
            }
        </div>
    </div>
</div>