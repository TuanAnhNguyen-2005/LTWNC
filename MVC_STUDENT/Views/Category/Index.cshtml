@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewBag.Title = "Danh mục";
}

<h2 class="mb-4">
    <i class="fas fa-folder-open text-primary me-2"></i>Tất cả danh mục
</h2>

<div class="row">
    @for (int i = 1; i <= 8; i++)
    {
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card card-modern text-center h-100">
                <div class="card-body">
                    <i class="fas fa-folder fa-4x text-primary mb-3"></i>
                    <h5 class="card-title">Danh mục @i</h5>
                    <p class="text-muted">@(i * 10) học liệu</p>
                    <a href="/Category/Details/@i" class="btn btn-gradient btn-sm">Xem thêm</a>
                </div>
            </div>
        </div>
    }
</div>



