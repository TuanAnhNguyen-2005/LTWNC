@{
    ViewBag.Title = Model.TenKhoaHoc;
    var quizzes = ViewBag.Quizzes as List<MVC_Student.Controllers.QuizDto>;
}
@if (ViewBag.DebugInfo != null)
{
    <div class="alert alert-warning">
        <strong>DEBUG INFO (xóa sau khi fix xong):</strong>
        <div style="font-size:12px; white-space: pre-line;">@Html.Raw(ViewBag.DebugInfo)</div>
    </div>
}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                @if (!string.IsNullOrEmpty(Model.AnhBia))
                {
                    <img src="@Model.AnhBia" class="card-img-top" style="height:300px; object-fit:cover;" alt="@Model.TenKhoaHoc">
                }
            <div class="card-body">
                <h1 class="card-title fw-bold" style="color: #4a148c;">@Model.TenKhoaHoc</h1>
                <p class="lead text-muted">@Model.MoTa</p>

                @* === THÊM LINK XEM/TẢI TÀI LIỆU Ở ĐÂY === *@
                <div class="mb-4">
                    <a href="@Url.Action("Course", "HocLieu", new { maKhoaHoc = Model.MaKhoaHoc })"
                       class="btn btn-primary">
                        <i class="fas fa-file-download me-2"></i>Xem / tải tài liệu khóa học
                    </a>
                </div>

                @* ====================================== *@

                <hr class="my-5">
                <h3 class="fw-bold mb-4">
                    <i class="fas fa-tasks me-2"></i> Bài kiểm tra (Quiz)
                </h3>
                @if (quizzes == null || !quizzes.Any())
                {
                    <p class="text-muted">Chưa có bài kiểm tra nào.</p>
                }
                else
                {
                    <div class="row">
                        @foreach (var quiz in quizzes)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 border-start border-primary border-4">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">@quiz.TenQuiz</h5>
                                        <p class="card-text text-muted small">@quiz.MoTa</p>
                                        <p class="text-muted small">
                                            <i class="fas fa-clock me-1"></i>
                                            @(quiz.ThoiGianLamBai.HasValue ? $"{quiz.ThoiGianLamBai} phút" : "Không giới hạn")
                                        </p>
                                        <a href="@Url.Action("Take", "Quiz", new { id = quiz.MaQuiz })"
                                           class="btn btn-success mt-auto">
                                            <i class="fas fa-play me-1"></i> Làm bài ngay
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                <div class="mt-4">
                    <a href="@Url.Action("Index", "KhoaHoc")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>