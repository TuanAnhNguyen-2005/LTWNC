    <title>Wayground - Science Quiz</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            background: #f5f5f5;
        }

        /* Header */
        .top-header {
            background: white;
            padding: 12px 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            gap: 20px;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .logo {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #ec4899, #f97316);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 24px;
        }

        .search-box {
            flex: 1;
            max-width: 600px;
            position: relative;
        }

            .search-box input {
                width: 100%;
                padding: 10px 15px 10px 40px;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-size: 14px;
            }

        .search-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
        }

        .header-right {
            display: flex;
            gap: 15px;
            align-items: center;
            margin-left: auto;
        }

        .help-btn {
            padding: 8px 16px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: #ddd;
            cursor: pointer;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            left: 0;
            top: 64px;
            width: 70px;
            height: calc(100vh - 64px);
            background: white;
            border-right: 1px solid #e5e5e5;
            display: flex;
            flex-direction: column;
            padding: 10px 0;
        }

        .sidebar-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 15px 10px;
            cursor: pointer;
            color: #666;
            font-size: 11px;
            gap: 5px;
            transition: all 0.2s;
        }

            .sidebar-item:hover {
                background: #f5f5f5;
            }

            .sidebar-item.active {
                color: #ec4899;
                background: #fef2f2;
            }

        .sidebar-icon {
            font-size: 20px;
        }

        .upgrade-badge {
            margin-top: auto;
            background: linear-gradient(135deg, #fbbf24, #f59e0b);
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 10px auto;
            cursor: pointer;
        }

        /* Main Content */
        .main-content {
            margin-left: 70px;
            padding: 20px;
        }

        /* Quiz Header Section */
        .quiz-header {
            background: white;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
            display: flex;
            gap: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        .quiz-thumbnail {
            width: 80px;
            height: 80px;
            border-radius: 8px;
            object-fit: cover;
            background: linear-gradient(135deg, #667eea, #764ba2);
        }

        .quiz-info {
            flex: 1;
        }

        .quiz-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .quiz-meta {
            display: flex;
            align-items: center;
            gap: 15px;
            color: #666;
            font-size: 14px;
        }

        .verified-badge {
            color: #10b981;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        /* Action Buttons */
        .action-buttons {
            background: white;
            padding: 15px 20px;
            border-radius: 12px;
            margin-bottom: 20px;
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            justify-content: space-between;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        .btn-group {
            display: flex;
            gap: 10px;
        }

        .action-btn {
            padding: 10px 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
            transition: all 0.2s;
        }

            .action-btn:hover {
                background: #f5f5f5;
            }

        .btn-preview {
            border-color: #ec4899;
            color: #ec4899;
        }

        .btn-assign {
            border-color: #ec4899;
            color: #ec4899;
        }

        .btn-start {
            background: #ec4899;
            color: white;
            border: none;
        }

            .btn-start:hover {
                background: #db2777;
            }

        /* Questions Section */
        .questions-section {
            background: white;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .section-title {
            font-size: 18px;
            font-weight: 600;
        }

        .toggle-switch {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #666;
            font-size: 14px;
        }

        .switch {
            position: relative;
            width: 44px;
            height: 24px;
            background: #10b981;
            border-radius: 12px;
            cursor: pointer;
        }

            .switch::after {
                content: '';
                position: absolute;
                width: 20px;
                height: 20px;
                background: white;
                border-radius: 50%;
                top: 2px;
                right: 2px;
                transition: all 0.3s;
            }

        /* Question Card */
        .question-card {
            border: 1px solid #e5e5e5;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 15px;
        }

        .question-header {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
            color: #666;
            font-size: 13px;
        }

        .question-type {
            background: #f0f0f0;
            padding: 4px 10px;
            border-radius: 4px;
            font-weight: 500;
        }

        .question-text {
            font-size: 16px;
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .blank-space {
            display: inline-block;
            border-bottom: 2px solid #333;
            min-width: 80px;
            margin: 0 5px;
        }

        .answer-options {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
        }

        .answer-option {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px;
            border: 1px solid #e5e5e5;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s;
        }

            .answer-option:hover {
                background: #f9f9f9;
            }

            .answer-option.correct {
                background: #ecfdf5;
                border-color: #10b981;
            }

        .radio-btn {
            width: 20px;
            height: 20px;
            border: 2px solid #ddd;
            border-radius: 50%;
            position: relative;
        }

        .answer-option.correct .radio-btn {
            border-color: #10b981;
            background: #10b981;
        }

            .answer-option.correct .radio-btn::after {
                content: '✓';
                position: absolute;
                color: white;
                font-size: 12px;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }

        /* Interactive Activities Section */
        .activities-section {
            margin-top: 30px;
            padding: 20px 0;
        }

        .activities-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .activities-title {
            font-size: 22px;
            font-weight: 600;
        }

        .view-more {
            color: #ec4899;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .create-card {
            background: white;
            border-radius: 12px;
            padding: 30px;
            text-align: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        .create-title {
            font-size: 16px;
            margin: 20px 0;
            color: #333;
        }

        .create-btn {
            background: #ec4899;
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-size: 15px;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .create-btn:hover {
                background: #db2777;
            }

        .activities-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .activity-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            cursor: pointer;
            transition: transform 0.2s;
        }

            .activity-card:hover {
                transform: translateY(-5px);
            }

        .activity-image {
            width: 100%;
            height: 160px;
            object-fit: cover;
            position: relative;
        }

        .question-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background: rgba(0,0,0,0.7);
            color: white;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 13px;
        }

        .activity-info {
            padding: 15px;
        }

        .activity-title {
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 15px;
        }

        .activity-meta {
            color: #666;
            font-size: 13px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* Footer */
        .footer {
            margin-top: 50px;
            padding: 40px 20px;
            background: white;
            border-top: 1px solid #e5e5e5;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 40px;
        }

        .footer-section h3 {
            font-size: 14px;
            margin-bottom: 15px;
            color: #666;
        }

        .footer-section a {
            display: block;
            color: #333;
            text-decoration: none;
            margin-bottom: 10px;
            font-size: 14px;
        }

            .footer-section a:hover {
                color: #ec4899;
            }

        .footer-bottom {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #e5e5e5;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .social-links {
            display: flex;
            gap: 15px;
        }

        .app-buttons {
            display: flex;
            gap: 10px;
        }

        .app-btn {
            padding: 8px 16px;
            background: #000;
            color: white;
            border-radius: 6px;
            font-size: 12px;
        }
    </style>
