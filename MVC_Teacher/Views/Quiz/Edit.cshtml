@model MVC_Teacher.Models.QuizCreateViewModel

@{
    ViewBag.Title = "Chỉnh sửa Quiz";
}

<h2>Chỉnh sửa Quiz</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaQuiz) <!-- Ẩn MaQuiz để gửi POST -->

    <div class="form-group">
        @Html.LabelFor(model => model.TenQuiz)
        @Html.TextBoxFor(model => model.TenQuiz, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TenQuiz)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MoTa)
        @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ThoiGianLamBai)
        @Html.TextBoxFor(model => model.ThoiGianLamBai, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a href="@Url.Action("Details", "Quiz", new { id = Model.MaQuiz })" class="btn btn-secondary">Hủy</a>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}