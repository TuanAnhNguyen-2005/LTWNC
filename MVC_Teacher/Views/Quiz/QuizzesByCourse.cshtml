@model MVC_Teacher.Models.QuizListByCourseViewModel
@{
    ViewBag.Title = "Quiz của khóa học: " + Model.TenKhoaHoc;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ===== MODERN QUIZ LIST DESIGN ===== */

    .quiz-list-wrapper {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px 80px;
        min-height: 100vh;
    }

    /* ===== HEADER SECTION ===== */
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 28px;
        padding: 50px 40px;
        margin-bottom: 40px;
        box-shadow:
            0 20px 60px rgba(102, 126, 234, 0.3),
            0 0 0 1px rgba(255, 255, 255, 0.1) inset;
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
        animation: float 6s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% { transform: translate(0, 0) scale(1); }
        50% { transform: translate(-20px, 20px) scale(1.1); }
    }

    .header-content {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 30px;
        flex-wrap: wrap;
    }

    .header-text {
        flex: 1;
        min-width: 300px;
    }

    .header-icon-wrapper {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 70px;
        height: 70px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 18px;
        margin-bottom: 20px;
        backdrop-filter: blur(10px);
    }

    .header-icon-wrapper i {
        font-size: 2rem;
        color: white;
    }

    .header-title {
        color: white;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0 0 12px 0;
        letter-spacing: -0.5px;
        line-height: 1.2;
    }

    .header-subtitle {
        color: rgba(255, 255, 255, 0.95);
        font-size: 1.3rem;
        margin: 0;
        font-weight: 400;
    }

    .btn-create-quiz {
        background: white;
        color: #667eea;
        border: none;
        border-radius: 18px;
        padding: 18px 36px;
        font-weight: 700;
        font-size: 1.05rem;
        box-shadow:
            0 10px 30px rgba(0, 0, 0, 0.2),
            0 0 0 1px rgba(255, 255, 255, 0.5) inset;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

    .btn-create-quiz:hover {
        transform: translateY(-3px);
        box-shadow:
            0 15px 40px rgba(0, 0, 0, 0.25),
            0 0 0 1px rgba(255, 255, 255, 0.7) inset;
        color: #764ba2;
    }

    /* ===== QUIZ TABLE CARD ===== */
    .quiz-table-card {
        background: white;
        border-radius: 28px;
        box-shadow:
            0 10px 40px rgba(0, 0, 0, 0.06),
            0 0 0 1px rgba(0, 0, 0, 0.04);
        overflow: hidden;
        margin-bottom: 40px;
        transition: box-shadow 0.3s ease;
    }

    .quiz-table-card:hover {
        box-shadow:
            0 15px 50px rgba(0, 0, 0, 0.08),
            0 0 0 1px rgba(0, 0, 0, 0.06);
    }

    .table-card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 30px 40px;
        border-bottom: none;
    }

    .table-card-title {
        color: white;
        font-size: 1.4rem;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .quiz-count-badge {
        background: white;
        color: #667eea;
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 0.95rem;
        font-weight: 700;
        margin-left: 8px;
    }

    /* ===== TABLE STYLES ===== */
    .quiz-table {
        margin: 0;
        width: 100%;
    }

    .quiz-table thead {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
    }

    .quiz-table th {
        padding: 20px 24px;
        font-weight: 600;
        color: #1e293b;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border: none;
    }

    .quiz-table tbody tr {
        border-bottom: 1px solid #f1f5f9;
        transition: all 0.2s ease;
    }

    .quiz-table tbody tr:hover {
        background: #f8fafc;
        transform: scale(1.01);
    }

    .quiz-table td {
        padding: 24px;
        vertical-align: middle;
        border: none;
    }

    .quiz-number {
        font-weight: 700;
        color: #667eea;
        font-size: 1.1rem;
    }

    .quiz-name-cell {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .quiz-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 12px;
        color: white;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .quiz-name {
        font-weight: 600;
        color: #1e293b;
        font-size: 1.05rem;
    }

    .time-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        background: #f1f5f9;
        border-radius: 12px;
        color: #64748b;
        font-weight: 600;
        font-size: 0.95rem;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        border-radius: 14px;
        font-weight: 600;
        font-size: 0.95rem;
    }

    .status-published {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

    .status-draft {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        color: white;
        box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
    }

    /* ===== ACTION BUTTONS ===== */
    .action-buttons {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    .btn-action {
        width: 42px;
        height: 42px;
        border-radius: 12px;
        border: 2px solid;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        background: white;
        cursor: pointer;
        font-size: 1rem;
    }

    .btn-action:hover {
        transform: translateY(-2px);
    }

    .btn-view {
        border-color: #06b6d4;
        color: #06b6d4;
    }

    .btn-view:hover {
        background: #06b6d4;
        color: white;
        box-shadow: 0 6px 16px rgba(6, 182, 212, 0.3);
    }

    .btn-edit {
        border-color: #f59e0b;
        color: #f59e0b;
    }

    .btn-edit:hover {
        background: #f59e0b;
        color: white;
        box-shadow: 0 6px 16px rgba(245, 158, 11, 0.3);
    }

    .btn-delete {
        border-color: #ef4444;
        color: #ef4444;
    }

    .btn-delete:hover {
        background: #ef4444;
        color: white;
        box-shadow: 0 6px 16px rgba(239, 68, 68, 0.3);
    }

    /* ===== EMPTY STATE ===== */
    .empty-state {
        text-align: center;
        padding: 100px 40px;
        background: white;
        border-radius: 28px;
        box-shadow:
            0 10px 40px rgba(0, 0, 0, 0.06),
            0 0 0 1px rgba(0, 0, 0, 0.04);
        margin-bottom: 40px;
    }

    .empty-icon-wrapper {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 140px;
        height: 140px;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        border-radius: 50%;
        margin-bottom: 30px;
    }

    .empty-icon-wrapper i {
        font-size: 4rem;
        color: #667eea;
        opacity: 0.6;
    }

    .empty-title {
        color: #475569;
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 12px;
    }

    .empty-description {
        color: #64748b;
        font-size: 1.15rem;
        margin-bottom: 30px;
    }

    .btn-create-first {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        border: none;
        border-radius: 18px;
        padding: 16px 40px;
        font-weight: 600;
        font-size: 1.05rem;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

    .btn-create-first:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
        color: white;
    }

    /* ===== BACK BUTTON ===== */
    .back-section {
        text-align: center;
        margin-top: 50px;
    }

    .btn-back {
        background: white;
        color: #64748b;
        border: 2px solid #e2e8f0;
        border-radius: 18px;
        padding: 16px 40px;
        font-weight: 600;
        font-size: 1.05rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

    .btn-back:hover {
        background: #f8fafc;
        border-color: #cbd5e1;
        color: #475569;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    .btn-back i {
        transition: transform 0.2s ease;
    }

    .btn-back:hover i {
        transform: translateX(-4px);
    }

    /* ===== RESPONSIVE ===== */
    @@media (max-width: 992px) {
        .quiz-list-wrapper {
            padding: 30px 15px 60px;
        }

        .page-header {
            padding: 40px 30px;
            border-radius: 24px;
        }

        .header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .header-text {
            min-width: auto;
            width: 100%;
        }

        .header-title {
            font-size: 2rem;
        }

        .header-subtitle {
            font-size: 1.1rem;
        }

        .btn-create-quiz {
            width: 100%;
            justify-content: center;
        }

        .table-card-header {
            padding: 25px 30px;
        }

        .quiz-table th,
        .quiz-table td {
            padding: 16px;
            font-size: 0.9rem;
        }

        .quiz-icon {
            width: 40px;
            height: 40px;
            font-size: 1rem;
        }

        .btn-action {
            width: 38px;
            height: 38px;
            font-size: 0.9rem;
        }
    }

    @@media (max-width: 768px) {
        .page-header {
            padding: 30px 20px;
            border-radius: 20px;
        }

        .header-icon-wrapper {
            width: 60px;
            height: 60px;
        }

        .header-icon-wrapper i {
            font-size: 1.5rem;
        }

        .header-title {
            font-size: 1.7rem;
        }

        .header-subtitle {
            font-size: 1rem;
        }

        .quiz-table-card {
            border-radius: 20px;
        }

        .table-card-header {
            padding: 20px;
        }

        .table-card-title {
            font-size: 1.2rem;
            flex-wrap: wrap;
        }

        .quiz-table thead {
            display: none;
        }

        .quiz-table tbody tr {
            display: block;
            margin-bottom: 20px;
            border: 1px solid #e2e8f0;
            border-radius: 16px;
            padding: 16px;
        }

        .quiz-table td {
            display: block;
            padding: 12px 0;
            border: none;
            text-align: left !important;
        }

        .quiz-table td::before {
            content: attr(data-label);
            font-weight: 600;
            color: #64748b;
            display: block;
            margin-bottom: 8px;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
        }

        .quiz-number::before {
            content: 'STT: ';
        }

        .action-buttons {
            justify-content: flex-start;
            margin-top: 12px;
        }

        .empty-state {
            padding: 60px 20px;
            border-radius: 20px;
        }

        .empty-icon-wrapper {
            width: 100px;
            height: 100px;
            margin-bottom: 20px;
        }

        .empty-icon-wrapper i {
            font-size: 3rem;
        }

        .empty-title {
            font-size: 1.5rem;
        }

        .empty-description {
            font-size: 1rem;
        }
    }

    @@media (max-width: 480px) {
        .btn-create-quiz,
        .btn-create-first,
        .btn-back {
            padding: 14px 28px;
            font-size: 1rem;
        }
    }
</style>

<div class="quiz-list-wrapper">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-text">
                <div class="header-icon-wrapper">
                    <i class="fas fa-clipboard-question"></i>
                </div>
                <h1 class="header-title">Quiz của khóa học</h1>
                <p class="header-subtitle">@Model.TenKhoaHoc</p>
            </div>
            <a href="@Url.Action("Create", "Quiz", new { maKhoaHoc = Model.MaKhoaHoc })"
               class="btn-create-quiz">
                <i class="fas fa-plus-circle"></i>
                Tạo Quiz mới
            </a>
        </div>
    </div>

    @if (Model.Quizzes.Any())
    {
        <!-- Quiz Table -->
        <div class="quiz-table-card">
            <div class="table-card-header">
                <h2 class="table-card-title">
                    <i class="fas fa-list-check"></i>
                    Danh sách Quiz
                    <span class="quiz-count-badge">@Model.Quizzes.Count</span>
                </h2>
            </div>
            <div class="table-responsive">
                <table class="quiz-table">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 8%;">STT</th>
                            <th>Tên Quiz</th>
                            <th class="text-center" style="width: 15%;">Thời gian</th>
                            <th class="text-center" style="width: 15%;">Trạng thái</th>
                            <th class="text-center" style="width: 18%;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var quiz in Model.Quizzes)
                        {
                            var index = Model.Quizzes.IndexOf(quiz) + 1;
                            <tr>
                                <td class="text-center" data-label="STT">
                                    <span class="quiz-number">@index</span>
                                </td>
                                <td data-label="Tên Quiz">
                                    <div class="quiz-name-cell">
                                        <div class="quiz-icon">
                                            <i class="fas fa-clipboard-list"></i>
                                        </div>
                                        <span class="quiz-name">@quiz.TenQuiz</span>
                                    </div>
                                </td>
                                <td class="text-center" data-label="Thời gian">
                                    <span class="time-badge">
                                        <i class="fas fa-clock"></i>
                                        @(quiz.ThoiGianLamBai ?? 30) phút
                                    </span>
                                </td>
                                <td class="text-center" data-label="Trạng thái">
                                    <span class="status-badge @(quiz.TrangThai == "Published" ? "status-published" : "status-draft")">
                                        <i class="fas @(quiz.TrangThai == "Published" ? "fa-check-circle" : "fa-pause-circle")"></i>
                                        @quiz.TrangThai
                                    </span>
                                </td>
                                <td class="text-center" data-label="Hành động">
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Details", "Quiz", new { id = quiz.MaQuiz })"
                                           class="btn-action btn-view"
                                           title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Quiz", new { id = quiz.MaQuiz })"
                                           class="btn-action btn-edit"
                                           title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @using (Html.BeginForm("Delete", "Quiz", new { id = quiz.MaQuiz }, FormMethod.Post, new { @class = "d-inline" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn-action btn-delete"
                                                    title="Xóa"
                                                    onclick="return confirm('Bạn có chắc muốn xóa quiz \" @quiz.TenQuiz \" không?');">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-icon-wrapper">
                <i class="fas fa-clipboard-list"></i>
            </div>
            <h3 class="empty-title">Khóa học này chưa có quiz nào</h3>
            <p class="empty-description">Hãy bắt đầu bằng việc tạo quiz đầu tiên cho học viên của bạn!</p>
            <a href="@Url.Action("Create", "Quiz", new { maKhoaHoc = Model.MaKhoaHoc })"
               class="btn-create-first">
                <i class="fas fa-plus"></i>
                Tạo Quiz ngay
            </a>
        </div>
    }

    <!-- Back Button -->
    <div class="back-section">
        <a href="@Url.Action("MyCourses", "KhoaHoc")" class="btn-back">
            <i class="fas fa-arrow-left"></i>
            Quay lại danh sách khóa học
        </a>
    </div>
</div>