@model MVC_Teacher.Models.QuizListByCourseViewModel

@{
    ViewBag.Title = "Quiz của khóa học: " + Model.TenKhoaHoc;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Phần debug (hiển thị khi có lỗi hoặc luôn) -->
@if (ViewBag.DebugInfo != null && ((List<string>)ViewBag.DebugInfo).Any())
{
    <div class="alert alert-info mt-3">
        <strong>Debug Info:</strong>
        <ul class="mb-0">
            @foreach (var line in (List<string>)ViewBag.DebugInfo)
            {
                <li>@Html.Raw(line)</li>
            }
        </ul>
    </div>
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-book me-2 text-primary"></i>
            Quiz của khóa học: <strong>@Model.TenKhoaHoc</strong>
        </h2>
        <a href="@Url.Action("Create", "Quiz", new { maKhoaHoc = Model.MaKhoaHoc })"
           class="btn btn-success rounded-pill px-4">
            <i class="fas fa-plus me-2"></i>Tạo Quiz mới
        </a>
    </div>

    @if (Model.Quizzes.Any())
    {
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-gradient-primary text-white">
                <h5 class="mb-0"><i class="fas fa-list-ul me-2"></i>Danh sách Quiz (@Model.Quizzes.Count)</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="text-center">STT</th>
                            <th>Tên Quiz</th>
                            <th>Thời gian (phút)</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var quiz in Model.Quizzes)
                        {
                            <tr>
                                <td class="text-center">@(Model.Quizzes.IndexOf(quiz) + 1)</td>
                                <td>@quiz.TenQuiz</td>
                                <td class="text-center">@(quiz.ThoiGianLamBai ?? 30)</td>
                                <td>
                                    <span class="badge @(quiz.TrangThai == "Published" ? "bg-success" : "bg-warning")">
                                        @quiz.TrangThai
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Details", "Quiz", new { id = quiz.MaQuiz })"
                                           class="btn btn-info" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Quiz", new { id = quiz.MaQuiz })"
                                           class="btn btn-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @using (Html.BeginForm("Delete", "Quiz", new { id = quiz.MaQuiz }, FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger"
                                                    onclick="return confirm('Xóa quiz \" @quiz.TenQuiz \"?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            <i class="fas fa-info-circle me-2"></i>
            Khóa học này chưa có quiz nào. Hãy <a href="@Url.Action("Create", "Quiz", new { maKhoaHoc = Model.MaKhoaHoc })">tạo ngay!</a>
        </div>
    }

        <div class="mt-4 text-center">
            <a href="@Url.Action("MyCourses", "KhoaHoc")" class="btn btn-secondary rounded-pill px-4 py-2">
                <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách khóa học
            </a>
        </div>
</div>