@model MVC_TEACHER.Controllers.CreateKhoaHocVm
@{
    ViewBag.Title = "Tạo khóa học";
}

<div class="create-course-container">
    <h2 class="page-title">
        <i class="fas fa-graduation-cap"></i> Tạo khóa học mới
    </h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert-error">
            <i class="fas fa-exclamation-triangle"></i>
            <span>@ViewBag.Error</span>
        </div>
    }

    @using (Html.BeginForm("Create", "KhoaHoc", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label class="form-label">
                Tên khóa học <span class="required">*</span>
            </label>
            @Html.TextBoxFor(m => m.TenKhoaHoc, new { @class = "form-input", placeholder = "Nhập tên khóa học", required = "required" })
            @Html.ValidationMessageFor(m => m.TenKhoaHoc, "", new { @class = "validation-error" })
        </div>

        <div class="form-group">
            <label class="form-label">Mô tả</label>
            @Html.TextAreaFor(m => m.MoTa, new { @class = "form-textarea", placeholder = "Mô tả ngắn gọn về khóa học...", rows = 5 })
            @Html.ValidationMessageFor(m => m.MoTa, "", new { @class = "validation-error" })
        </div>

        <div class="form-group">
            <label class="form-label">Ảnh bìa khóa học</label>
            <input type="file" name="anhBiaFile" accept="image/*" class="form-file" />
            <small class="form-hint">
                <i class="fas fa-info-circle"></i>
                Định dạng hỗ trợ: JPG, PNG, GIF, WEBP. Kích thước khuyến nghị: 1200x600px. Để trống nếu chưa có.
            </small>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-submit">
                <i class="fas fa-save"></i> Lưu (Draft)
            </button>
        </div>
    }
</div>

<style>
    .create-course-container {
        max-width: 800px;
        margin: 30px auto;
        padding: 0 20px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #4a148c; /* tím đậm giống header */
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .alert-error {
        background-color: #ffebee;
        border-left: 5px solid #f44336;
        color: #c62828;
        padding: 15px 20px;
        border-radius: 8px;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 15px;
        white-space: pre-line;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #311b92;
        margin-bottom: 8px;
        font-size: 16px;
    }

    .required {
        color: #f44336;
    }

    .form-input, .form-textarea {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid #b39ddb;
        border-radius: 8px;
        font-size: 16px;
        transition: border-color 0.3s, box-shadow 0.3s;
        background-color: #f8f5ff;
    }

    .form-input:focus, .form-textarea:focus {
        outline: none;
        border-color: #7e57c2;
        box-shadow: 0 0 0 3px rgba(126, 87, 194, 0.2);
    }

    .form-textarea {
        resize: vertical;
        min-height: 120px;
    }

    .form-file {
        width: 100%;
        padding: 10px;
        border: 1px dashed #9575cd;
        border-radius: 8px;
        background-color: #f8f5ff;
        cursor: pointer;
    }

    .form-file:hover {
        border-color: #7e57c2;
        background-color: #ede7f6;
    }

    .form-hint {
        display: block;
        margin-top: 8px;
        color: #7e57c2;
        font-size: 14px;
    }

    .validation-error {
        color: #f44336;
        font-size: 14px;
        margin-top: 5px;
        display: block;
    }

    .form-actions {
        text-align: right;
        margin-top: 40px;
    }

    .btn-submit {
        background: linear-gradient(135deg, #7e57c2, #4a148c);
        color: white;
        border: none;
        padding: 12px 30px;
        font-size: 17px;
        font-weight: 600;
        border-radius: 50px;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(126, 87, 194, 0.4);
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(126, 87, 194, 0.5);
    }

    @@media (max-width: 768px) {
        .create-course-container {
            margin: 20px auto;
            padding: 0 15px;
        }
        .page-title {
            font-size: 24px;
        }
    }
</style>