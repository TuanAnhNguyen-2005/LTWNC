@{
    ViewBag.Title = "Upload Thành Công - " + ViewBag.TenKhoaHoc;
}

<div class="container py-5">
    <h2 class="mb-4 fw-bold text-primary">
        Upload thành công cho khóa học: <span class="text-dark">@ViewBag.TenKhoaHoc</span>
    </h2>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @ViewBag.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle"></i> @TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["debug_response"] != null)
    {
        <div class="alert alert-info">
            <strong>Debug API Upload Response:</strong><br />
            @TempData["debug_response"]
        </div>
    }

    @if (ViewBag.DebugInfo != null)
    {
        <div class="alert alert-info">
            <strong>Debug Info:</strong><br />
            @Html.Raw(ViewBag.DebugInfo)
        </div>
    }

    @if (ViewBag.DebugApiResponse != null)
    {
        <div class="alert alert-info">
            <strong>API Response (Course):</strong><br />
            <pre>@ViewBag.DebugApiResponse</pre>
        </div>
    }

    <div class="mb-5">
        <a href="@Url.Action("Upload", "UploadFile", new { maKhoaHoc = ViewBag.MaKhoaHoc })" class="btn btn-primary btn-lg">
            <i class="fas fa-upload me-2"></i> Upload thêm tài liệu
        </a>
        <a href="@Url.Action("MyCourses", "KhoaHoc")" class="btn btn-secondary btn-lg ms-3">
            <i class="fas fa-arrow-left me-2"></i> Quay lại danh sách khóa học
        </a>
    </div>

    @if (ViewBag.DanhSachTaiLieu != null && ((List<MVC_Teacher.Models.HocLieuViewModel>)ViewBag.DanhSachTaiLieu).Count > 0)
    {
        <h4 class="mb-4">Danh sách tài liệu đã upload (@((List<MVC_Teacher.Models.HocLieuViewModel>)ViewBag.DanhSachTaiLieu).Count)</h4>
        <div class="row">
            @foreach (var item in (List<MVC_Teacher.Models.HocLieuViewModel>)ViewBag.DanhSachTaiLieu)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.TieuDe</h5>
                            @if (!string.IsNullOrEmpty(item.MoTa))
                            {
                                <p class="card-text text-muted small">@item.MoTa</p>
                            }
                            <p class="text-muted small">
                                <i class="fas fa-file-alt me-1"></i> @item.LoaiTep
                                <span class="ml-3"><i class="fas fa-hdd me-1"></i> @item.KichThuocHienThi</span>
                                <br><i class="fas fa-calendar me-1"></i> @item.NgayDang.ToString("dd/MM/yyyy HH:mm")
                            </p>
                            <a href="@item.DuongDanTep" target="_blank" class="btn btn-outline-primary mt-auto">
                                <i class="fas fa-eye me-1"></i> Xem / Tải xuống
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">Chưa có tài liệu nào được upload cho khóa học này.</p>
    }
</div>