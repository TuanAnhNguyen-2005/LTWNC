@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quản lý người dùng";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Quản lý người dùng</h5>
        <a href="@Url.RouteUrl("Admin", new { controller = "User", action = "Create" })" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>Thêm người dùng
        </a>
    </div>
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle" style="font-size: 1rem;">
                <thead class="table-light text-center align-middle">
                    <tr>
                        <th style="width: 70px;">#</th>
                        <th>Email</th>
                        <th>Họ tên</th>
                        <th>Mật khẩu</th>
                        <th>Vai trò</th>
                        <th style="width: 170px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Users != null)
                    {
                        var users = ViewBag.Users as IEnumerable<dynamic>;
                        if (users != null)
                        {
                            int index = 1;
                            foreach (var u in users)
                            {
                                // Lấy mã vai trò an toàn
                                var maVaiTro = u.MaVaiTro ?? u.maVaiTro ?? u.roleId ?? u.RoleId ?? 0;

                                // Xác định tên vai trò hiển thị
                                var roleName = maVaiTro == 2 ? "Giáo viên" :
                                               maVaiTro == 3 ? "Học sinh" :
                                               maVaiTro == 1 ? "Admin" :
                                               maVaiTro.ToString();

                                // Lấy ID người dùng an toàn từ nhiều tên trường có thể có
                                var userId = u.MaNguoiDung ??
                                             u.id ??
                                             u.userId ??
                                             u.Id ??
                                             u.UserId ??
                                             u.maNguoiDung ??
                                             u.MANguoiDung ??
                                             u.ID ??
                                             0;

                                <tr class="text-center">
                                    <td>@(index++)</td>
                                    <td class="text-break">@(u.Email ?? u.email ?? "")</td>
                                    <td>@(u.HoTen ?? u.fullName ?? u.FullName ?? "")</td>
                                    <td><span class="text-muted">••••••••</span></td>
                                    <td>
                                        <span class="badge rounded-pill @(maVaiTro == 2 ? "bg-primary" : maVaiTro == 3 ? "bg-info" : maVaiTro == 1 ? "bg-danger" : "bg-secondary")">
                                            @roleName
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.RouteUrl("Admin", new { controller = "User", action = "Details", id = userId })"
                                           class="btn btn-sm btn-info me-1">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.RouteUrl("Admin", new { controller = "User", action = "Edit", id = userId })"
                                           class="btn btn-sm btn-warning me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post"
                                              action="@Url.RouteUrl("Admin", new { controller = "User", action = "Delete", id = userId })"
                                              class="d-inline"
                                              onsubmit="return confirm('Xác nhận xóa người dùng này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">
                                    <i class="fas fa-info-circle me-2"></i>Không có dữ liệu
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                <i class="fas fa-spinner fa-spin me-2"></i>Đang tải dữ liệu...
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>