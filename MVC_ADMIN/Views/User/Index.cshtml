@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quản lý người dùng";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Quản lý người dùng</h5>
        <a href="@Url.RouteUrl("Admin", new { controller = "User", action = "Create" })" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>Thêm người dùng
        </a>
    </div>
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Users != null)
                    {
                        var users = ViewBag.Users as IEnumerable<dynamic>;
                        if (users != null)
                        {
                            foreach (var u in users)
                            {
                                <tr>
                                    <td>@(u.MaNguoiDung ?? u.id ?? u.userId)</td>
                                    <td>@(u.HoTen ?? u.fullName ?? u.FullName ?? "")</td>
                                    <td>@(u.Email ?? u.email ?? "")</td>
                                    <td>@(u.TenVaiTro ?? u.role ?? u.Role ?? "")</td>
                                    <td>
                                        @if ((u.TrangThai ?? u.isActive ?? u.IsActive ?? true))
                                        {
                                            <span class="badge bg-success">Đang hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Đã khóa</span>
                                        }
                                    </td>
                                    <td>@(u.NgayTao ?? u.createdDate ?? u.CreatedDate ?? "N/A")</td>
                                    <td>
                                        <a href="@Url.RouteUrl("Admin", new { controller = "User", action = "Details", id = (u.MaNguoiDung ?? u.id ?? u.userId) })" class="btn btn-sm btn-info me-1">Chi tiết</a>
                                        <a href="@Url.RouteUrl("Admin", new { controller = "User", action = "Edit", id = (u.MaNguoiDung ?? u.id ?? u.userId) })" class="btn btn-sm btn-warning me-1">Sửa</a>
                                        <form method="post" action="@Url.RouteUrl("Admin", new { controller = "User", action = "Delete", id = (u.MaNguoiDung ?? u.id ?? u.userId) })" style="display:inline" onsubmit="return confirm('Xác nhận xóa người dùng này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    <i class="fas fa-info-circle me-2"></i>Không có dữ liệu
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">
                                <i class="fas fa-spinner fa-spin me-2"></i>Đang tải dữ liệu...
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>