@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Thông tin cá nhân";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i>Thông tin cá nhân</h5>
                <a href="/Profile/Edit" class="btn btn-sm btn-primary">
                    <i class="fas fa-edit me-1"></i>Chỉnh sửa
                </a>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (ViewBag.Profile != null || ViewBag.FullName != null)
                {
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <div class="user-avatar-large mx-auto mb-3" style="width: 120px; height: 120px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 48px; font-weight: 600;">
                                @{
                                    var fullName = ViewBag.Profile?.fullName ?? ViewBag.Profile?.FullName ?? ViewBag.FullName ?? "U";
                                    var firstChar = fullName.Length > 0 ? fullName[0].ToString().ToUpper() : "U";
                                }
                                @firstChar
                            </div>
                            <h4>@(ViewBag.Profile?.fullName ?? ViewBag.Profile?.FullName ?? ViewBag.FullName)</h4>
                            <span class="badge bg-@(ViewBag.Profile?.role == "Admin" || ViewBag.Role == "Admin" ? "danger" : ViewBag.Profile?.role == "Teacher" || ViewBag.Role == "Teacher" ? "primary" : "success")">
                                @(ViewBag.Profile?.role ?? ViewBag.Role ?? "User")
                            </span>
                        </div>
                        <div class="col-md-8">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="35%">Email:</th>
                                    <td>@(ViewBag.Profile?.email ?? ViewBag.Profile?.Email ?? ViewBag.Email)</td>
                                </tr>
                                <tr>
                                    <th>Số điện thoại:</th>
                                    <td>@(ViewBag.Profile?.phone ?? ViewBag.Profile?.Phone ?? "Chưa cập nhật")</td>
                                </tr>
                                <tr>
                                    <th>Địa chỉ:</th>
                                    <td>@(ViewBag.Profile?.address ?? ViewBag.Profile?.Address ?? "Chưa cập nhật")</td>
                                </tr>
                                <tr>
                                    <th>Ngày sinh:</th>
                                    <td>@(ViewBag.Profile?.dateOfBirth ?? ViewBag.Profile?.DateOfBirth ?? "Chưa cập nhật")</td>
                                </tr>
                                <tr>
                                    <th>Giới tính:</th>
                                    <td>@(ViewBag.Profile?.gender ?? ViewBag.Profile?.Gender ?? "Chưa cập nhật")</td>
                                </tr>
                                <tr>
                                    <th>Ngày tham gia:</th>
                                    <td>@(ViewBag.Profile?.createdDate ?? ViewBag.Profile?.CreatedDate ?? "N/A")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h6 class="mb-3"><i class="fas fa-cog me-2"></i>Cài đặt tài khoản</h6>
                        <div class="list-group">
                            <a href="/Profile/Edit" class="list-group-item list-group-item-action">
                                <i class="fas fa-user-edit me-2"></i>Chỉnh sửa thông tin cá nhân
                            </a>
                            <a href="/Profile/ChangePassword" class="list-group-item list-group-item-action">
                                <i class="fas fa-key me-2"></i>Đổi mật khẩu
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>Không tìm thấy thông tin người dùng
                    </div>
                }
            </div>
        </div>
    </div>
</div>

