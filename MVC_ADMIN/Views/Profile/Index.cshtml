@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Thông tin cá nhân";

    var profileObj = ViewBag.Profile;
    Func<string[], string> getProfileString = names =>
    {
        if (profileObj == null)
        {
            return null;
        }

        var type = profileObj.GetType();
        foreach (var name in names)
        {
            var prop = type.GetProperty(name);
            if (prop != null)
            {
                var value = prop.GetValue(profileObj, null);
                if (value != null)
                {
                    var strValue = value.ToString().Trim();
                    if (!string.IsNullOrEmpty(strValue))
                    {
                        return strValue;
                    }
                }
            }
        }

        return null;
    };

    var fullName = getProfileString(new[] { "fullName", "FullName", "HoTen", "hoTen" }) ?? (ViewBag.FullName as string) ?? "U";
    if (string.IsNullOrWhiteSpace(fullName))
    {
        fullName = "U";
    }

    var firstChar = fullName.Length > 0 ? fullName[0].ToString().ToUpper() : "U";

    var email = getProfileString(new[] { "email", "Email" }) ?? (ViewBag.Email as string) ?? "Chưa cập nhật";
    if (string.IsNullOrWhiteSpace(email))
    {
        email = "Chưa cập nhật";
    }

    var phone = getProfileString(new[] { "phone", "Phone", "SoDienThoai", "soDienThoai" }) ?? (ViewBag.Phone as string) ?? "Chưa cập nhật";
    if (string.IsNullOrWhiteSpace(phone))
    {
        phone = "Chưa cập nhật";
    }

    var address = getProfileString(new[] { "address", "Address", "DiaChi", "diaChi" }) ?? (ViewBag.Address as string) ?? "Chưa cập nhật";
    if (string.IsNullOrWhiteSpace(address))
    {
        address = "Chưa cập nhật";
    }

    var dateOfBirth = getProfileString(new[] { "dateOfBirth", "DateOfBirth", "NgaySinh", "ngaySinh" }) ?? "Chưa cập nhật";
    if (string.IsNullOrWhiteSpace(dateOfBirth))
    {
        dateOfBirth = "Chưa cập nhật";
    }

    var gender = getProfileString(new[] { "gender", "Gender", "GioiTinh", "gioiTinh" }) ?? "Chưa cập nhật";
    if (string.IsNullOrWhiteSpace(gender))
    {
        gender = "Chưa cập nhật";
    }

    var createdDate = getProfileString(new[] { "createdDate", "CreatedDate", "NgayTao", "ngayTao" }) ?? "N/A";
    if (string.IsNullOrWhiteSpace(createdDate))
    {
        createdDate = "N/A";
    }

    var role = getProfileString(new[] { "role", "Role" }) ?? (ViewBag.Role as string) ?? "User";
    if (string.IsNullOrWhiteSpace(role))
    {
        role = "User";
    }

    var roleBadgeClass = role == "Admin"
        ? "danger"
        : role == "Teacher"
            ? "primary"
            : "success";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i>Thông tin cá nhân</h5>
                <a href="/Profile/Edit" class="btn btn-sm btn-primary">
                    <i class="fas fa-edit me-1"></i>Chỉnh sửa
                </a>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (ViewBag.Profile != null || ViewBag.FullName != null)
                {
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <div class="user-avatar-large mx-auto mb-3" style="width: 120px; height: 120px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 48px; font-weight: 600;">
                                @firstChar
                            </div>
                            <h4>@fullName</h4>
                            <span class="badge bg-@roleBadgeClass">
                                @role
                            </span>
                        </div>
                        <div class="col-md-8">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="35%">Email:</th>
                                    <td>@email</td>
                                </tr>
                                <tr>
                                    <th>Số điện thoại:</th>
                                    <td>@phone</td>
                                </tr>
                                <tr>
                                    <th>Địa chỉ:</th>
                                    <td>@address</td>
                                </tr>
                                <tr>
                                    <th>Ngày sinh:</th>
                                    <td>@dateOfBirth</td>
                                </tr>
                                <tr>
                                    <th>Giới tính:</th>
                                    <td>@gender</td>
                                </tr>
                                <tr>
                                    <th>Ngày tham gia:</th>
                                    <td>@createdDate</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h6 class="mb-3"><i class="fas fa-cog me-2"></i>Cài đặt tài khoản</h6>
                        <div class="list-group">
                            <a href="/Profile/Edit" class="list-group-item list-group-item-action">
                                <i class="fas fa-user-edit me-2"></i>Chỉnh sửa thông tin cá nhân
                            </a>
                            <a href="/Profile/ChangePassword" class="list-group-item list-group-item-action">
                                <i class="fas fa-key me-2"></i>Đổi mật khẩu
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>Không tìm thấy thông tin người dùng
                    </div>
                }
            </div>
        </div>
    </div>
</div>

