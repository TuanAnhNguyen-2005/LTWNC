@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Trang chủ";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-home me-2"></i>
                        Chào mừng đến với Nền Tảng Học Liệu
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h5><i class="fas fa-user me-2"></i>Xin chào, <strong>@ViewBag.UserName</strong>!</h5>
                        <p class="mb-0">Vai trò: <span class="badge bg-success">@ViewBag.UserRole</span></p>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 border-primary">
                                <div class="card-body text-center">
                                    <i class="fas fa-book fa-3x text-primary mb-3"></i>
                                    <h5>Học liệu</h5>
                                    <p class="text-muted">Xem và tải các tài liệu học tập</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 border-success">
                                <div class="card-body text-center">
                                    <i class="fas fa-user-circle fa-3x text-success mb-3"></i>
                                    <h5>Thông tin cá nhân</h5>
                                    <p class="text-muted">Quản lý thông tin tài khoản</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>