@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Đăng ký tài khoản";
}
@model MVC_ADMIN.Controllers.SignUpViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card mt-5 shadow">
                <div class="card-header bg-success text-white text-center">
                    <h4>Đăng ký tài khoản HocLieu</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    @using (Html.BeginForm("Index", "SignUp", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label>Họ và tên</label>
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Nguyễn Văn A", required = "required" })
                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label>Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "example@gmail.com", required = "required" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label>Mật khẩu</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label>Xác nhận mật khẩu</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            <label>Đăng ký với vai trò</label><br />
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="Role" id="roleStudent" value="Student" checked>
                                <label class="form-check-label" for="roleStudent">Học viên</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="Role" id="roleTeacher" value="Teacher">
                                <label class="form-check-label" for="roleTeacher">Giáo viên</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success btn-block w-100">Đăng ký ngay</button>
                    }

                    <hr />
                    <p class="text-center">
                        Đã có tài khoản? <a href="@Url.Action("Index", "Login")">Đăng nhập</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}