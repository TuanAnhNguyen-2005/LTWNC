@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Chỉnh sửa quyền";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0"><i class="fas fa-shield-edit me-2"></i>Chỉnh sửa quyền</h5>
            </div>
            <div class="card-body">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form id="editPermissionForm" method="post" action="@Url.RouteUrl("Admin", new { controller = "Permission", action = "Edit" })">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="permissionId" name="permissionId" value="@(ViewBag.Permission?.permissionId ?? ViewBag.Permission?.id)" />

                    <div class="mb-3">
                        <label for="permissionName" class="form-label">Tên quyền <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="permissionName" name="permissionName"
                               value="@(ViewBag.Permission?.permissionName ?? ViewBag.Permission?.PermissionName)" required>
                        <small class="form-text text-muted">Ví dụ: ViewUsers, EditUsers, DeleteUsers</small>
                    </div>

                    <div class="mb-3">
                        <label for="displayName" class="form-label">Tên hiển thị <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="displayName" name="displayName"
                               value="@(ViewBag.Permission?.displayName ?? ViewBag.Permission?.DisplayName)" required>
                        <small class="form-text text-muted">Tên hiển thị cho người dùng</small>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Mô tả</label>
                        <textarea class="form-control" id="description" name="description" rows="4">@(ViewBag.Permission?.description ?? ViewBag.Permission?.Description)</textarea>
                    </div>

                    <div class="mb-3">
                        <label for="module" class="form-label">Module</label>
                        <select class="form-select" id="module" name="module">
                            <option value="">-- Chọn module --</option>
                            <option value="User" selected="@(ViewBag.Permission?.module == "User" || ViewBag.Permission?.Module == "User")">Quản lý người dùng</option>
                            <option value="Category" selected="@(ViewBag.Permission?.module == "Category" || ViewBag.Permission?.Module == "Category")">Quản lý danh mục</option>
                            <option value="Permission" selected="@(ViewBag.Permission?.module == "Permission" || ViewBag.Permission?.Module == "Permission")">Quản lý quyền</option>
                            <option value="Course" selected="@(ViewBag.Permission?.module == "Course" || ViewBag.Permission?.Module == "Course")">Quản lý khóa học</option>
                            <option value="Material" selected="@(ViewBag.Permission?.module == "Material" || ViewBag.Permission?.Module == "Material")">Quản lý học liệu</option>
                            <option value="Statistical" selected="@(ViewBag.Permission?.module == "Statistical" || ViewBag.Permission?.Module == "Statistical")">Thống kê</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="isActive" class="form-label">Trạng thái</label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="isActive" name="isActive"
                                   checked="@(ViewBag.Permission?.isActive ?? ViewBag.Permission?.IsActive ?? true)">
                            <label class="form-check-label" for="isActive">Kích hoạt</label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.RouteUrl("Admin", new { controller = "Permission", action = "Index" })" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>